<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="./public/styles/css/main.css"> -->
    <title>9 Hole</title>
</head>

<body class="registerBody">
    <!-- holds the register section -->
    <main class="registerSection">
        <!-- register title -->
        <h1 class="registerTitle">9 Hole</h1>

        <form action="/users/register" method="POST" class="registerBlock">
            <article class="registerInfo">
                <div>
                    <input type="name" name="first_name" id="first_name" placeholder="Enter First Name"
                        value="<%= typeof first_name != 'undefined' ? first_name : '' %>">
                </div>
                <input type="name" name="last_name" id="last_name" placeholder="Enter Last Name"
                    value="<%= typeof last_name != 'undefined' ? last_name : '' %>">
                </div>
                <div>
                    <input type="email" name="email" id="email" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div>
                    <input type="password" name="password" id="password" placeholder="Enter Password"
                        value="<%= typeof password != 'undefined' ? password : '' %>">
                </div>
                <div>
                    <input type="password" name="password2" id="password2" placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                </div>
            </article>

            <button type="submit">Create Account</button>
            <br>
            <p class="account">Have An Account? <a href="/users/login">Login</a></p>
        </form>

    </main>
    <!-- <script src="./taskFile.js"></script> -->
</body>

</html>